<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>SPActivityHub</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>com.liferay.portal.kernel.portlet.DefaultConfigurationAction</configuration-action-class>
		<indexer-class>com.sambaash.platform.activityhub.indexer.SPConversationIndexer</indexer-class>
		<indexer-class>com.sambaash.platform.activityhub.indexer.SPNoteIndexer</indexer-class>
		<indexer-class>com.sambaash.platform.activityhub.indexer.SPLogActivityIndexer</indexer-class>
		<user-notification-definitions>user-notifications.xml</user-notification-definitions>
	    <user-notification-handler-class>com.sambaash.platform.activityhub.notification.SPActivityHubNotificationHandler</user-notification-handler-class>		
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>SPActivityHub-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>