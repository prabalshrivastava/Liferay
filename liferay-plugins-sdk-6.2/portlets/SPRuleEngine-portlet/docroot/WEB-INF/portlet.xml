<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>rule-builder</portlet-name>
		<display-name>Rule Builder</display-name>
		<portlet-class>
			com.sambaash.platform.portlet.rule.builder.action.RuleBuilderPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/rulebuilder/list.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/rulebuilder/config.jsp</value>
		</init-param>
		<init-param>
			<name>update-template</name>
			<value>/html/rulebuilder/edit.jsp</value>
		</init-param>
		<init-param>
			<name>copy-template</name>
			<value>/html/rulebuilder/copy.jsp</value>
		</init-param>
		<init-param>
			<name>detail-template</name>
			<value>/html/rulebuilder/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Rule Builder</title>
			<short-title>Rule Builder</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>