<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>SocialPlugin</portlet-name>
		<display-name>SocialPlugin</display-name>
		<portlet-class>com.sambaash.platform.portlet.socialplugin.action.SocialPluginAction</portlet-class>
		<init-param>
			<name>edit-jsp</name>
			<value>/html/socialplugin/edit.jsp</value>
		</init-param>
		<init-param>
			<name>view-jsp</name>
			<value>/html/socialplugin/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>SocialPlugin</title>
			<short-title>SocialPlugin</short-title>
			<keywords/>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>SocialBookmarks</portlet-name>
		<display-name>SocialBookmarks</display-name>
		<portlet-class>com.sambaash.platform.portlet.socialplugin.action.SocialBookmarksAction</portlet-class>
		<init-param>
			<name>edit-jsp</name>
			<value>/html/socialbookmarks/edit.jsp</value>
		</init-param>
		<init-param>
			<name>view-jsp</name>
			<value>/html/socialbookmarks/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>SocialBookmarks</title>
			<short-title>SocialBookmarks</short-title>
			<keywords/>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>