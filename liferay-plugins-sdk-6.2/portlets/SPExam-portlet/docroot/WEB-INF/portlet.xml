<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>seating-plan</portlet-name>
		<display-name>Seating Plan</display-name>
		<portlet-class>
			com.sambaash.platform.exam.action.SeatingPlanPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/seatingplan/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/seatingplan/config.jsp</value>
		</init-param>
		<init-param>
			<name>update-template</name>
			<value>/html/seatingplan/create.jsp</value>
		</init-param>
		<init-param>
			<name>copy-template</name>
			<value>/html/seatingplan/copy.jsp</value>
		</init-param>
		<init-param>
			<name>detail-template</name>
			<value>/html/seatingplan/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Seating Plan</title>
			<short-title>Seating Plan</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>seating-layout</portlet-name>
		<display-name>Seating Layout</display-name>
		<portlet-class>
			com.sambaash.platform.exam.action.SeatingLayout
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/seatinglayout/list.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/seatinglayout/config.jsp</value>
		</init-param>
		<init-param>
			<name>update-template</name>
