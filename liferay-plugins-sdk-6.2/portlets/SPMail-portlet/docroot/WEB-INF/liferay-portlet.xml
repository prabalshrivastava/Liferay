<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>

	<portlet>
		<portlet-name>SPMail</portlet-name>
		<icon>/icon.png</icon>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>spmail-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>SPMailTemplateListing</portlet-name>
		<icon>/icon.png</icon>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			spmailtemplatelisting-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>SPMailTemplateCreate</portlet-name>
		<icon>/icon.png</icon>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			spmailtemplatecreate-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>SPMailCampaignCreate</portlet-name>
		<icon>/icon.png</icon>
<scheduler-entry>
			<scheduler-description>SPMailCampaignJob</scheduler-description>
			<scheduler-event-listener-class>com.sambaash.platform.portlet.spmail.listener.SPMailCampaignJob</scheduler-event-listener-class>
			<trigger>
				<cron>
					<cron-trigger-value>1 2 1 1 1 ? 2050</cron-trigger-value>
				</cron>
			</trigger>
		</scheduler-entry>
		<scheduler-entry>
			<scheduler-description>SPMailCampaignSubscriberJob</scheduler-description>
			<scheduler-event-listener-class>com.sambaash.platform.portlet.spmail.listener.SPMailCampaignSubscriberJob</scheduler-event-listener-class>
			<trigger>
				<cron>
					<cron-trigger-value>1 2 1 1 1 ? 2050</cron-trigger-value>
				</cron>
			</trigger>
		</scheduler-entry>
		<instanceable>false</instanceable>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			spmailcampaigncreate-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>SPMailCampaignListing</portlet-name>
		<icon>/icon.png</icon>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			sp-mail-campaign-listing-action-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>SPMailSubscriberListing</portlet-name>
		<icon>/icon.png</icon>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			spmailsubscriberlisting-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>mail-subscribe</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>com.liferay.portal.kernel.portlet.DefaultConfigurationAction</configuration-action-class>
		<instanceable>true</instanceable>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>mail-subscribe-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>
