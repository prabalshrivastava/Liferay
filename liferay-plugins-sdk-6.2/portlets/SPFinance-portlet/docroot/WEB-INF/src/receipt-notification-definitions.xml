<?xml version="1.0"?>
<!DOCTYPE user-notification-definitions PUBLIC "-//Liferay//DTD User Notification Definitions 6.2.0//EN" "http://www.liferay.com/dtd/liferay-user-notification-definitions_6_2_0.dtd">
<user-notification-definitions>
	<definition>
		<notification-type>${com.sambaash.platform.finance.constants.FinanceConstants.NOTIFICATION_TYPE_VOID_RECEIPT}</notification-type>
		<description>Receive a notification when a receipt is send for approval for marking it as void</description>
		<delivery-type>
			<name>website</name>
			<type>${com.liferay.portal.model.UserNotificationDeliveryConstants.TYPE_WEBSITE}</type>
			<default>true</default>
			<modifiable>true</modifiable>
		</delivery-type>
	</definition>
	<definition>
		<notification-type>${com.sambaash.platform.finance.constants.FinanceConstants.NOTIFICATION_TYPE_CANCEL_RECEIPT}</notification-type>
		<description>Receive a notification when a receipt is send for approval for marking it as cancel</description>
		<delivery-type>
			<name>website</name>
			<type>${com.liferay.portal.model.UserNotificationDeliveryConstants.TYPE_WEBSITE}</type>
			<default>true</default>
			<modifiable>true</modifiable>
		</delivery-type>
	</definition>
	<definition>
		<notification-type>${com.sambaash.platform.finance.constants.FinanceConstants.NOTIFICATION_TYPE_RETURN_RECEIPT}</notification-type>
		<description>Receive a notification when a receipt is send to submitter for amendments</description>
		<delivery-type>
			<name>website</name>
			<type>${com.liferay.portal.model.UserNotificationDeliveryConstants.TYPE_WEBSITE}</type>
			<default>true</default>
			<modifiable>true</modifiable>
		</delivery-type>
