<?xml version="1.0"?>
<!DOCTYPE resource-action-mapping PUBLIC "-//Liferay//DTD Resource Action Mapping 6.2.0//EN" "http://www.liferay.com/dtd/liferay-resource-action-mapping_6_2_0.dtd">

<resource-action-mapping>
    <portlet-resource>
        <portlet-name>SPJob-Create</portlet-name>
        <permissions>
            <supports>
                <action-key>ADD_JOB</action-key>
                <action-key>EDIT_JOB</action-key>
                <action-key>DELETE_JOB</action-key>
            </supports>
            <site-member-defaults>
            </site-member-defaults>
            <guest-defaults>
            </guest-defaults>
            <guest-unsupported>
                <action-key>EDIT_JOB</action-key>
                <action-key>DELETE_JOB</action-key>
                <action-key>ADD_JOB</action-key>
            </guest-unsupported>
        </permissions>
    </portlet-resource>
    <portlet-resource>
        <portlet-name>SPJob-Apply</portlet-name>
        <permissions>
            <supports>
                <action-key>VIEW_JOB</action-key>
                <action-key>APPLY_JOB</action-key>
            </supports>
            <site-member-defaults>
            </site-member-defaults>
            <guest-defaults>
            </guest-defaults>
            <guest-unsupported>
                <action-key>APPLY_JOB</action-key>
            </guest-unsupported>
        </permissions>
    </portlet-resource>
</resource-action-mapping>