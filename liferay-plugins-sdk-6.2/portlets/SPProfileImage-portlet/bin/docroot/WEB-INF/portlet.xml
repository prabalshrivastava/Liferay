<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>ProfileImage</portlet-name>
		<display-name>ProfileImage</display-name>
		<portlet-class>com.sambaash.platform.portlet.profileimage.action.SPProfileImageAction</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/spprofileimage/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ProfileImage</title>
			<short-title>ProfileImage</short-title>
			<keywords/>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>SimpleProfileImage</portlet-name>
		<display-name>SimpleProfileImage</display-name>
		<portlet-class>com.sambaash.platform.portlet.profileimage.action.SimpleProfileImageAction</portlet-class>
		<init-param>
			<name>edit-jsp</name>
			<value>/html/simpleprofileimage/edit.jsp</value>
		</init-param>
		<init-param>
			<name>view-jsp</name>
			<value>/html/simpleprofileimage/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>SimpleProfileImage</title>
			<short-title>SimpleProfileImage</short-title>
			<keywords/>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>