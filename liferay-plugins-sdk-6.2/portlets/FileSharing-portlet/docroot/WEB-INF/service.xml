<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="com.sambaash.platform.srv.sharing">
	<author>harini</author>
	<namespace>Sharing</namespace>

	<entity name="SPSharing" table="SPSharing" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="spSharingId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="createdBy" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="userId" type="long" />
		<column name="emailAddress" type="String" />
		<column name="classNameId" type="long" />
		<column name="classPK" type="long" />
		<column name="duration" type="int" />
		<column name="startDate" type="Date" />
		<column name="endDate" type="Date" />
		<column name="url" type="String" />
		<column name="expired" type="boolean" />
		<column name="internalShare" type="boolean" />
		<column name="writePermission" type="boolean" />
		<column name="viewCount" type="int" />

		<!-- Finder methods -->

		<finder name="UserIdClassNameIdAndClassPK" return-type="Sharing">
			<finder-column name="userId" />
			<finder-column name="classNameId" />
			<finder-column name="classPK" />
		</finder>

		<finder name="UserIdDatesExpired" return-type="Collection" where = " expired = 0 ">
			<finder-column name="userId" />
			<finder-column name="startDate" comparator="&lt;" />
			<finder-column name="endDate" comparator="&gt;" />
		</finder>

		<finder name="CreatedByDatesExpired" return-type="Collection" where = " expired = 0 ">
			<finder-column name="createdBy" />
			<finder-column name="startDate" comparator="&lt;" />
			<finder-column name="endDate" comparator="&gt;" />
		</finder>

		<finder name="UserIdClassNameIdClassPKAndShareType" return-type="Sharing">
			<finder-column name="userId" />
			<finder-column name="classNameId" />
			<finder-column name="classPK" />
			<finder-column name="internalShare" />
		</finder>

		<finder name="EmailClassNameIdClassPKAndShareType" return-type="Sharing">
			<finder-column name="emailAddress" />
			<finder-column name="classNameId" />
			<finder-column name="classPK" />
			<finder-column name="internalShare" />
		</finder>

		<finder name="ClassPKAndClassNameId" return-type="Collection">
			<finder-column name="classPK" />
			<finder-column name="classNameId" />
		</finder>

		<finder name="CreatedByClassPKAndClassNameId" return-type="Collection">
			<finder-column name="createdBy" />
			<finder-column name="classPK" />
			<finder-column name="classNameId" />
		</finder>

		<finder name="Email" return-type="Collection">
			<finder-column name="emailAddress" />
		</finder>

	</entity>

</service-builder>